<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension
		id="application"
		point="org.eclipse.core.runtime.applications">
		<application>
			<run
				class="com.tlcsdm.tlstudio.examples.swt.rcp.Application">
			</run>
		</application>
	</extension>
	<extension
		point="org.eclipse.ui.perspectives">
		<perspective
			class="com.tlcsdm.tlstudio.examples.swt.rcp.Perspective"
			name="Perspective"
			id="com.tlcsdm.tlstudio.examples.swt.rcp.perspective">
		</perspective>
	</extension>
	<extension
		point="org.eclipse.ui.views">
		<view
			category="org.eclipse.swt.examples.category"
			class="com.tlcsdm.tlstudio.examples.swt.rcp.View"
			id="com.tlcsdm.tlstudio.examples.swt.rcp.view"
			inject="true"
			name="Demo View">
		</view>
	</extension>
	<extension
		point="org.eclipse.ui.activities">
		<activity
			id="org.eclipse.swt.examples.rcp.hideAnnotation"
			name="activity">
			<enabledWhen>
				<with variable="true">
					<equals value="false">
					</equals>
				</with>
			</enabledWhen>
		</activity>
		<activityPatternBinding
			activityId="org.eclipse.swt.examples.rcp.hideAnnotation"
			pattern="org.eclipse.ui.editors/org.eclipse.ui.edit.text.*|org.eclipse.ui.ide/org.eclipse.ui.*|org.eclipse.ui.cheatsheets/org.eclipse.ui.*">
		</activityPatternBinding>
		<activityPatternBinding
			activityId="org.eclipse.swt.examples.rcp.hideAnnotation"
			isEqualityPattern="true"
			pattern="org.eclipse.ui.console/org.eclipse.ui.internal.console.ansi.preferences.AnsiConsolePreferencePage">
		</activityPatternBinding>
		<activityPatternBinding
			activityId="org.eclipse.swt.examples.rcp.hideAnnotation"
			isEqualityPattern="true"
			pattern="org.eclipse.ui.views/org.eclipse.ui.views.ContentOutline">
		</activityPatternBinding>
		<activityPatternBinding
			activityId="org.eclipse.swt.examples.rcp.hideAnnotation"
			isEqualityPattern="true"
			pattern="org.eclipse.ui.views/org.eclipse.ui.views.PropertySheet">
		</activityPatternBinding>
		<activityPatternBinding
			activityId="org.eclipse.swt.examples.rcp.hideAnnotation"
			isEqualityPattern="true"
			pattern="org.eclipse.ui/org.eclipse.ui.internal.introview">
		</activityPatternBinding>
		<activityPatternBinding
			activityId="org.eclipse.swt.examples.rcp.hideAnnotation"
			isEqualityPattern="true"
			pattern="org.eclipse.ui.workbench.texteditor/org.eclipse.ui.views.minimap.MinimapView">
		</activityPatternBinding>
	</extension>
	<extension
		point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="menu:org.eclipse.ui.main.menu">
			<menu
				label="File">
				<command
					commandId="org.eclipse.ui.file.restartWorkbench"
					label="Restart"
					style="push">
				</command>
				<command
					commandId="org.eclipse.ui.file.exit"
					label="Exit">
				</command>
			</menu>
			<menu
				id="window"
				label="Window">
				<command
					commandId="org.eclipse.ui.views.showView"
					label="Show View"
					style="push">
				</command>
			</menu>
			<menu
				id="com.tlcsdm.tlstudio.examples.swt.rcp.menus.help"
				label="Help">
				<command
					commandId="org.eclipse.ui.help.aboutAction"
					label="About"
					style="push">
				</command>
			</menu>
		</menuContribution>
		
		<menuContribution
			locationURI="menu:window">
				<command
					commandId="org.eclipse.swt.snippets.launcher"
					label="SWT Snippets"
					style="push">
				</command>
		</menuContribution>
	</extension>
	<extension
		id="product"
		point="org.eclipse.core.runtime.products">
		<product
			name="SWT Examples Product"
			application="com.tlcsdm.tlstudio.examples.swt.rcp.application">
			<property
				name="windowImages"
				value="icons/eclipse16.png,icons/eclipse32.png,icons/eclipse48.png,icons/eclipse64.png,icons/eclipse128.png,icons/eclipse256.png" />
			<property
				name="appName"
				value="SWT Examples Product">
			</property>
			<property
				name="aboutText"
				value="%aboutText">
			</property>
			<property
				name="aboutImage"
				value="product_lg.gif">
			</property>
			<property
				name="startupForegroundColor"
				value="4B4848">
			</property>
			<property
				name="startupMessageRect"
				value="7,345,445,20">
			</property>
			<property
				name="startupProgressRect"
				value="0,385,600,15">
			</property>
   <property
         name="preferenceCustomization"
         value="plugin_customization.ini">
   </property>
		</product>
	</extension>

</plugin>
