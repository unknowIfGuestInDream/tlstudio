<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.tlcsdm.tlstudio.examples.swt.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.tlcsdm.tlstudio.examples.swt.rcp.Perspective"
            name="Perspective"
            id="com.tlcsdm.tlstudio.examples.swt.rcp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.swt.examples.category"
            class="com.tlcsdm.tlstudio.examples.swt.rcp.View"
            id="com.tlcsdm.tlstudio.examples.swt.rcp.view"
            inject="true"
            name="View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="SWT Examples Product"
            application="com.tlcsdm.tlstudio.examples.swt.rcp.application">
        <property
               name="windowImages"
               value="icons/eclipse16.png,icons/eclipse32.png,icons/eclipse48.png,icons/eclipse64.png,icons/eclipse128.png,icons/eclipse256.png"/>   
         <property
               name="appName"
               value="SWT Examples Product">
         </property>
         <property
               name="startupForegroundColor"
               value="4B4848">
         </property>
         <property
               name="startupMessageRect"
               value="7,345,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="0,385,600,15">
         </property>
      </product>
   </extension>

</plugin>
